{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile and run basic.cpp",
        "type": "shell",
        "command": "powershell.exe",
        "args": [
          "-Command",
          "Copy-Item '${file}' '${workspaceFolder}\\temp.cpp'; ",
          "g++ '${workspaceFolder}\\temp.cpp' -o '${workspaceFolder}\\temp'; ",
          "Get-Content '${workspaceFolder}\\input.txt' | .\\temp | Set-Content '${workspaceFolder}\\output.txt'; ",
          "Remove-Item '${workspaceFolder}\\temp.exe'; ",
          "Remove-Item '${workspaceFolder}\\temp.cpp'"
        ],
        "group": "build",
        "presentation": {
          "reveal": "silent",
          "panel": "shared"
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++.exe build active file",
        "command": "C:/Users/VIRAT/mingw64/bin/g++.exe",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
          "cwd": "C:/Users/VIRAT/mingw64/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  