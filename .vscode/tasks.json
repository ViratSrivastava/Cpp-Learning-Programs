{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run with input/output redirection",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the active C++ file."
        },
        {
            "label": "Run the program with input and output redirection",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [
                "<", "${workspaceFolder}/input.txt",
                ">", "${workspaceFolder}/output.txt"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
